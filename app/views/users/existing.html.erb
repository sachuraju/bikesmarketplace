<h1>Existing user</h1>

<div class="marketplace-form">
  <% form_for(@user) do |f| %>
      <%= f.error_messages %>

      <fieldset>
        <legend>Enter your details</legend>
        <div>
          <%= f.label :name %>
          <br/>
          <%= f.text_field :name, :size => 40 %>
        </div>

        <div>
          <%= f.label :user_password, 'Password' %>
          <br/>
          <%= f.password_field :password, :size => 40 %>
        </div>

        <div>
          <%= f.submit 'Submit', :class => "submit" %>
        </div>
      </fieldset>

  <% end %>
</div>