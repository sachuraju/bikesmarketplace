<fieldset>
  <%= content_tag "h3", "New Asset", :class => 'floating-window header' %>
  <%= error_messages_for :bike %>

  <% form_for @bike, :url => bikes_path, :html => {:method => :post} do |form| %>
    <ul>
      <li><label><span class="mandatory">*</span>Brand: </label><%= form.text_field :brand%></li>
      <li><label>Cost: </label><%= form.text_field :cost%></li>
      <li>
        <div class='floating-window control'><%= form.submit 'Create' %></div>
      </li>
    </ul>
  <% end %>
</fieldset>

<%= link_to "List all the bikes", :action => :index %>